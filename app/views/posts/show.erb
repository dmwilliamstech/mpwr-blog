<div class="post">
  <h1 class="title"><%= @post.title %></h1>

  <p class="post-info">
    Posted by <%= @post.account.name %>,
    <span class="date"><%= time_ago_in_words(@post.created_at) + ' ago' %></span>
  </p>

  <div class="body">
    <%= simple_format(@post.body) %>
  </div>

  <p><%= link_to("View all posts", url_for(:posts, :index)) %></p>
</div>